{
	"extends": "../../tsconfig.shared.json",
	"references": [
		{ "path": "../dynafer" }
	],
	"compilerOptions": {
		"strict": true,
		"baseUrl": "../",
		"outDir": "./build",
		"paths": {
			"finer": ["finer/ts/Finer"],
			"finer/packages/*": ["finer/ts/packages/*"],
			"finer/plugins/*": ["finer/ts/plugins/*"],

			"dynafer/utils": ["dynafer/utils/ts/Index"],
		}
	},
	"include": [
		"ts/**/*.ts",
		"ts/plugins/**/*.d.ts"
	]
}