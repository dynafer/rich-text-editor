{
	"root": true,
	"extends": [
		"plugin:@finer-group/editor"
	],
	"parserOptions": {
		"project": "**/tsconfig.json",
		"sourceType": "module"
	},
	"settings": {
		"import/parsers": {
		  	"@typescript-eslint/parser": [".ts"]
		},
		"import/extensions": [".ts"],
		"import/resolver": {
			"typescript": {
				"alwaysTryTypes": true,
				"project":  "**/tsconfig.json"
			}
		}
	},
	"ignorePatterns": ["*.js", "*.json", "packages/**/build/**/*.ts"]
}