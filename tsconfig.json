{
	"extends": "./tsconfig.shared.json",
	"compilerOptions": {
		"paths": {
			"finer": ["packages/finer/ts/Finer"],
			"finer/packages/*": ["packages/finer/ts/packages/*"],

			"@dynafer/colorpicker": ["packages/dynafer/colorpicker/ts/ColorPicker"],
			"@dynafer/dom-control": ["packages/dynafer/dom-control/ts/DOMControl"],
			"@dynafer/sketcher": ["packages/dynafer/sketcher/ts/Sketcher"],
			"@dynafer/utils": ["packages/dynafer/utils/ts/Index"]
		}
	},
	"include": [
		"packages/dynafer/**/*.ts",
		"packages/dynafer/**/*.d.ts",
		"packages/finer/**/*.ts",
		"packages/finer/**/*.d.ts"
	],
	"exclude": [
		"packages/**/build/**/*.ts"
	]
}